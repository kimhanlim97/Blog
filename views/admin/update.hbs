{{#if isAdmin}}
    {{> adminLogout}}
{{/if}}
<form action="/admin/update/{{post.id}}" method="POST">
    <p>
        <input type="text" name="title" value="{{post.title}}">
    </p>
    <p>
        <input type="text" name="author" value="{{post.author}}">
    </p>
    <p>
        <textarea name="main-text" cols="30" rows="10">{{post.main-text}}</textarea>
    </p>    
    <input type="submit">
</form>