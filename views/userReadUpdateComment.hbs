<h1>Title: {{post.title}}</h1>
<p>Author: {{post.author}}</p>
<p>Main Text: {{post.main-text}}</p>


<form action="/read/{{post.id}}/updateComment/{{updateComment.commentId}}" method="POST">
    <input type="text" name="author" value="{{updateComment.author}}">
    <input type="text" name="comment" value="{{updateComment.comment}}">
    <input type="submit" value="수정하기">
</form>

<ul>
    {{#each commentList}}
        <li>
            <p>{{this.author}}: {{this.comment}}</p>
        </li>
    {{/each}}
</ul>