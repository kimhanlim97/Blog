<h1>Title: {{post.title}}</h1>
<p>Author: {{post.author}}</p>
<p>Main Text: {{post.mainText}}</p>

<ul>
    {{#each comment}}
        {{#if this.update}}
            <form action="/post/{{../post.id}}/update-comment?id={{./this.id}}" method="POST">
                <input type="hidden" name="_csrf" value="{{../_csrfToken}}">
                <input type="text" name="author" value="{{./this.author}}">
                <input type="text" name="comment" value="{{./this.comment}}">
                <input type="submit" value="수정하기">
            </form>
        {{else}}
            <li>
                <p>{{./this.author}}: {{./this.comment}}</p>
            </li>
        {{/if}}
    {{/each}}
</ul>